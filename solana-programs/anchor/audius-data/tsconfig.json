{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "cli",
    "lib",
    "migrations",
    "tests",
    ".eslintrc.js"
  ]
}